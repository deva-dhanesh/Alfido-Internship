def celsius_to_fahrenheit(celsius):
    return (celsius * 9/5) + 32

def celsius_to_kelvin(celsius):
    return celsius + 273.15

def fahrenheit_to_celsius(fahrenheit):
    return (fahrenheit - 32) * 5/9

def fahrenheit_to_kelvin(fahrenheit):
    return (fahrenheit - 32) * 5/9 + 273.15

def kelvin_to_celsius(kelvin):
    return kelvin - 273.15

def kelvin_to_fahrenheit(kelvin):
    return (kelvin - 273.15) * 9/5 + 32

print("Temperature Conversion Program")
print("Choose the conversion type:")
print("1. Celsius to Fahrenheit")
print("2. Celsius to Kelvin")
print("3. Fahrenheit to Celsius")
print("4. Fahrenheit to Kelvin")
print("5. Kelvin to Celsius")
print("6. Kelvin to Fahrenheit")

choice = input("Enter choice (1-6): ")
temperature = float(input("Enter temperature value: "))

if choice == '1':
    print(f"Result: {celsius_to_fahrenheit(temperature)} 째F")
elif choice == '2':
    print(f"Result: {celsius_to_kelvin(temperature)} K")
elif choice == '3':
    print(f"Result: {fahrenheit_to_celsius(temperature)} 째C")
elif choice == '4':
    print(f"Result: {fahrenheit_to_kelvin(temperature)} K")
elif choice == '5':
    print(f"Result: {kelvin_to_celsius(temperature)} 째C")
elif choice == '6':
    print(f"Result: {kelvin_to_fahrenheit(temperature)} 째F")
else:
    print("Invalid choice. Please select a valid option.")
